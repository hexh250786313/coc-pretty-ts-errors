{
  "compilerOptions": {
    "alwaysStrict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "outDir": "build",
    "rootDir": "src",
    "lib": ["es2017"],
    "sourceMap": true,
    "declaration": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/parser": ["./lib/parser"],
    },
  },
  "typeRoots": ["node_modules", "node_modules/@types", "definitions"],
  "include": ["src/**/*.ts", "src/*.ts", "./global.d.ts"],
  "exclude": ["node_modules", "build"],
  "extends": "@tsconfig/recommended/tsconfig.json",
}
